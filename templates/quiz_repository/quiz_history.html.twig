{% extends 'layout.html.twig' %}

{% block title %}Quiz History{% endblock %}

{% block content %}

    <!--Button to go back to the quiz repository-->
    <div class="container">
        <a href="{{ path('app_quiz_repository') }}" class="btn btn-primary">Back to Quiz Repository</a>




    {# Section to display the filters for the quizzes #}
    <div class="container" style="margin-top: 3em; margin-bottom: 4em">
        <div class="row">
            <div class="col-md-4">
                <label for="userFilter">Filter by Chef:</label>
                <select id="userFilter" class="form-select">
                        <option value="">All Users</option>
                        {% for user in users %}
                             <option value="{{ user.id }}" {% if user.id == app.request.query.get('user') %}selected{% endif %}>
                                  {{ user.name }}
                             </option>
                        {% endfor %}
                </select>
            </div>

        </div>
    </div>



    <div class="container">
        <h2 style="text-align: center; padding-bottom: 1em">Quiz History</h2>
        <table class="table">
            <thead>
            <tr>
                <th style="text-align: center" >Assignment Date</th>
                <th style="text-align: center">Staff Member</th>
                <th style="text-align: center">Deadline</th>
                <th style="text-align: center">Overdue</th>
                <th style="text-align: center">Mark</th>
                <th style="text-align: center">Passed</th>
                <th style="text-align: center"></th>
            </tr>
            </thead>
            <tbody>


            {# if there isn't any quiz, display a message #}
            {% if assignments|length == 0 %}
            <tr>
                <td colspan="9" style="text-align: center">
                    <div class="alert alert-warning" role="alert">
                        There are no Quizzes!
                    </div>
                </td>
            </tr>
            {% else %}

            {% for assignment in assignments %}
                <tr>
                    <td style="text-align: center">{{ assignment.generatedDate|date('d-m-Y') }}</td>
                    <td style="text-align: center" >{{ assignment.chef.name }}</td>
                    <td style="text-align: center">{{ assignment.deadline|date('d-m-Y') }}</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            {% if assignment.completed==false and assignment.calculateOverdueDays()>0%}
                                <span class="badge bg-danger">Yes</span>
                            {% else %}
                                <span class="badge bg-success">No</span>
                            {% endif %}
                        </div>
                    </td>
                    <td style="text-align: center" >{{ assignment.isCompleted ? assignment.mark ~ ' %': 'N/A' }}</td>

                    <!- if the user has passed the quiz, then the passed column will be checked, else it will be empty -->
                   {%  if assignment.isCompleted %}
                        {% if assignment.isPassed %}
                            <td style="text-align: center"><i class="bi bi-check-circle-fill text-success"></i></td>
                        {% else %}
                            <td style="text-align: center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                        {% endif %}
                    {% else %}
                        <td style="text-align: center"><i class="bi bi-circle text-muted"></i></td>
                    {% endif %}


                    <td style="text-align: center">
                        <a href="{{ path('assigned_quiz_details', {'id': assignment.id}) }}" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

{# Pagination #}
<div id="paginationControls" class="d-flex justify-content-center">
    {% if currentPage > 1 %}
        <a href="{{ path('app_quiz_history', {'id': id, 'user': app.request.query.get('user'), 'page': currentPage - 1}) }}" class="btn btn-outline-secondary">Previous</a>
    {% endif %}

    {% for i in 1..totalPages %}
        <a href="{{ path('app_quiz_history', {'id': id, 'user': app.request.query.get('user'), 'page': i}) }}" class="btn {{ i == currentPage ? 'btn-primary' : 'btn-outline-secondary' }}">{{ i }}</a>
    {% endfor %}

    {% if currentPage < totalPages %}
        <a href="{{ path('app_quiz_history', {'id': id, 'user': app.request.query.get('user'), 'page': currentPage + 1}) }}" class="btn btn-outline-secondary">Next</a>
    {% endif %}
</div>




{% endblock %}

{% block javascripts %}
{{ parent() }}
        <script>
        // Filter by user
document.addEventListener('DOMContentLoaded', function() {
    var userFilter = document.getElementById('userFilter');
    if (userFilter) {
        userFilter.addEventListener('change', function() {
            var userId = this.value;
            var currentUrl = new URL(window.location.href);
            if (userId) {
                currentUrl.searchParams.set('user', userId);
            } else {
                currentUrl.searchParams.delete('user');
            }
            window.location.href = currentUrl.toString();
        });
    }
});
        </script>
{% endblock %}